{% extends 'base.html.twig' %}

{% block title %}Artiste
{% endblock %}

{% block body %}
	<div class="container">
		<div class="d-flex mb-5">
			<a class="btnreturn mx-5 mt-5" id="orange" title="back to list" href="{{ path('app_artist_index') }}">
				<svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-arrow-left-circle-fill" viewbox="0 0 16 16"><path d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0zm3.5 7.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z"/></svg>
			</a>
			<h1 class="mt-5">Artiste</h1>
		</div>

		<table class="table table-striped table-dark">
			<tbody>
				{% if is_granted('ROLE_ADMIN') %}
					<tr>
						<th>Id</th>
						<td>{{ artist.id }}</td>
					</tr>
				{% endif %}
				<tr>
					<th>Nom de l'artiste</th>
					<td>{{ artist.artistName }}</td>
				</tr>
				<tr>
					<th>Site Internet</th>
					<td>{{ artist.artistUrl }}</td>
				</tr>
			</tbody>
		</table>
		{% if is_granted('ROLE_ADMIN') %}
			<div class="d-flex mt-5">
				<a class="mx-3" title="Edit" href="{{ path('app_artist_edit', {'id': artist.id}) }}">
					<svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-pencil-square" viewbox="0 0 16 16">
						<path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
						<path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
					</svg>
				</a>

				<button class="btn content-justify-end">{{ include('artist/_delete_form.html.twig') }}</button>
			</div>
		{% endif %}
	</div>
{% endblock %}
