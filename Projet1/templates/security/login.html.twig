{% extends 'base.html.twig' %}
{% block title %}Connexion !
{% endblock %}

{% block body %}
	<div class="container">
		<form method="post">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{# {% if app.user %}
						        <div class="mb-3">
						            You're logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}"><svg class="text-danger"xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-box-arrow-right" viewBox="0 0 16 16"><path fill-rule="evenodd" d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0v2z"/><path fill-rule="evenodd" d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z"/></svg></a>
						        </div>
						    {% endif %} #}

			<h1 class="mt-5 mb-5 ms-3 font-weight-normal">Veuillez vous authentifier</h1>
			<label for="inputEmail">Adresse email</label>
			<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
			<label class="mt-3" for="inputPassword">Mot de passe</label>
			<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

			<input
			type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			{#
						        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
						        See https://symfony.com/doc/current/security/remember_me.html
						
						        <div class="checkbox mb-3">
						            <label>
						                <input type="checkbox" name="_remember_me"> Remember me
						            </label>
						        </div>
						    #}
			<div class="d-flex mt-5">
				<button class="btn btn-success mt-5 mx-3" title="Je me connecte" type="submit">Connexion</button>

			</form>
			<a class="btn btn-warning mt-5 mx-3" type="" title="Oops, j'ai oublié le mot de passe !" href="{{ path('app_forgot_password_request') }}">Mot de pase oublié</a>
			<a class="btn btn-secondary mt-5 mx-3" title="Je m'enregistre" href="{{ path('app_register') }}">Nouveau compte</a>
		</div>
	</div>
{% endblock %}
